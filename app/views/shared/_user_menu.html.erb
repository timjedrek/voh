      <div class="h-16"></div>
      <%= button_to 'Messages', messages_path, method: :get, class: "text-center text-stone-100 hover:text-stone-400 leading-10" %>
      <%= button_to 'Sign Out', destroy_admin_session_path, method: :delete, class: "text-center text-stone-100 hover:text-stone-400 leading-10" %>

    <!--Close button-->
    <button @click="usermenu = ! usermenu;" class="leading-10 text-stone-100 hover:text-stone-400 hover:bg-stone-700 border-2 hover:border-stone-400 w-min mt-5 px-5 rounded-full py-1">
