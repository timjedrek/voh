<%= render "shared/navbar" %>
<div class="h-20"></div>
<main class="bg-neutral-800 text-gray-300">
  <div class="py-10 font-bold font-splash text-center">
    <h1 class="text-6xl">Upcoming Tours</h1>
  </div>

  <div class="">
    <% @tours.upcoming.order(:date).reverse_each do | tour | %>
      <div class="text-center">
        <%= tour.date %>: <%= tour.city %>
      </div>
    <% end %>
  </div>

  <div class="py-10 font-bold font-splash text-center">
    <h1 class="text-6xl">Previous Tours</h1>
  </div>

  <div class="">
    <% @tours.previous.order(:date).reverse_each do | tour | %>
      <div class="text-center">
        <%= tour.date %>: <%= tour.city %>
      </div>
    <% end %>
  </div>

</main>

<%= render "shared/footer"%>