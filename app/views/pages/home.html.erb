    </div>

    <!--Video Section-->
    <div class="lg:w-1/2 flex flex-col items-center lg:py-10">
      <video class="h-screen-2/3" controls loop>
        <source src="https://voh-bucket.s3.us-east-2.amazonaws.com/introvid.mp4#t=0.54" type="video/mp4">
