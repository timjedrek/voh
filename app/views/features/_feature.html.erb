<div id="<%= dom_id feature %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= feature.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Code:</strong>
    <%= feature.code %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this feature", feature, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this feature', edit_feature_path(feature), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
