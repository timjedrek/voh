<section class="px-5 pb-10 flex flex-col items-center w-full">
  <div class="w-full lg:w-1/2">
    <%= form_with(model: message, class: "contents") do |form| %>
      <% if message.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
          <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

          <ul>
            <% message.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="my-5">
        <%= form.text_field :name, placeholder: "Name", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full text-black focus:border-neutral-600 focus:ring-neutral-600 placeholder:text-sm" %>
      </div>

      <div class="my-5">
        <%= form.email_field :email, placeholder: "E-mail", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full text-black focus:border-neutral-600 focus:ring-neutral-600 placeholder:text-sm" %>
      </div>

      <%= form.invisible_captcha :email_confirmation %>

      <div class="my-5">
        <%= form.text_field :phone, placeholder: "Phone number", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full text-black focus:border-neutral-600 focus:ring-neutral-600 placeholder:text-sm" %>
      </div>

      <div class="my-5">
        <%= form.text_area :content, rows: 4, placeholder: "Your message", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full text-black focus:border-neutral-600 focus:ring-neutral-600 placeholder:text-sm" %>
      </div>

      <%= recaptcha_tags %><br>

      <div class="inline">
        <%= form.submit "Send it!", class: "rounded-lg w-full py-3 px-5 bg-neutral-200 hover:bg-neutral-300 text-neutral-900 inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</section>